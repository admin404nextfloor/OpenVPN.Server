pipeline {
    agent any

    stages {
        stage('Deploy VPN') {
            steps {
                sshagent (credentials: ['ssh-credential-id']) {
                    sh '''
                        ssh -o StrictHostKeyChecking=no user@remote_server_ip << 'EOF'
                        apt-get update && apt-get install -y git
                        cd /root
                        git clone https://github.com/admin404nextfloor/vpn.git
                        cd vpn
                        chmod +x openvpn.sh
                        ./openvpn.sh
                        EOF
                    '''
                }
            }
        }
    }
}









